<%- include ("../partials/header") %>
<div class="container">
    <div class="row no-gutters">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="card col-md-9">
            <img class="img-fluid my-3" alt="Responsive image" src="<%= campground.image %>">
            <h4 class="pull-right">Â£5.00/night</h4>
            <div><h4><a href="#"><%=campground.name%></a></h4></div>
            <p><%= campground.description%></p>
            <p>
                <em>>Submmitted by <%= campground.author.username %></em>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="card col-md-9 my-3">
            <div class="text-right">
                <a class="btn btn-success my-1" href="/campgrounds/<%= campground._id %>/comments/new">Add new Comment</a>
            </div>
            <hr>
            <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="float-right">10 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>    
    </div>
</div>



<%- include ("../partials/footer") %>
